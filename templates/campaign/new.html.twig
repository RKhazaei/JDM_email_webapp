{% extends 'base.html.twig' %}

{% block title %}New Campaign{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Create New Email Campaign</h1>

    <!-- Form Section -->
    <div class="card">
        <div class="card-body">
            <form action="{{ path('campaign_new') }}" method="POST">
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" class="form-control" id="subject" name="subject" placeholder="Enter the email subject" required>
                </div>

                <div class="mb-3">
                    <label for="body" class="form-label">Email Body</label>
                    <textarea class="form-control" id="body" name="body" rows="5" placeholder="Write the email body here" required></textarea>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Send Campaign</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
